@model CustomerAttributeModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Customers.CustomerAttributes.EditAttributeDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Customer and user settings");
}

<form asp-controller="CustomerAttribute" asp-action="Edit" method="post" id="customerattribute-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Customers.CustomerAttributes.EditAttributeDetails") - @Model.Name
            <small>
                <em class="fas fa-arrow-circle-left"></em>
                <a asp-action="List">@T("Admin.Customers.CustomerAttributes.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <em class="far fa-save"></em>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <em class="far fa-save"></em>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="customerattribute-delete" class="btn btn-danger">
                <em class="far fa-trash-alt"></em>
                @T("Admin.Common.Delete")
            </span>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.CustomerAttributeDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="customerattribute-delete" />