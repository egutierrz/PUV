@model Nop.Web.Areas.Admin.Models.InformationRepository.InfoRepositoryFolderModel
<div asp-validation-summary="All"></div>
    <form asp-controller="InformationRepository" asp-action="UpdateFolder" method="post" id="formFolderUpdate">
        <div class="modal fade" tabindex="-1" role="dialog" id="folder-update">
            <div class="modal-dialog modal-md" role="document">
                <div class="modal-content">
                    <a href="#" class="close" data-dismiss="modal"><em class="fas fa-times"></em></a>
                <br/>
                    <div class="modal-body modal-body-md">
                        <div class="nk-upload-form card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="Name" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="NameUpdate" asp-required="true"/>
                                    <span asp-validation-for="NameUpdate"></span>
                                    <input asp-for="IdParent" style="display:none" />
                                    <input asp-for="Id" style="display:none" />
                                </div>
                            </div>
                        </div>
                        <div class="nk-modal-action justify-end">
                            <ul class="btn-toolbar g-4 align-center">
                                <li><button type="button" class="link link-primary" data-dismiss="modal">@T("Admin.Common.Cancel")</button></li>
                                <li><button class="btn btn-primary" type="submit">@T("Admin.Common.Save")</button></li>
                            </ul>
                        </div>
                    </div>
                </div><!-- .modal-content -->
            </div><!-- .modla-dialog -->
        </div><!-- .modal -->
    </form>